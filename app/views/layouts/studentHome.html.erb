<!DOCTYPE html>
<html>
<head>
  <title>IGDTUW TnP</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
 <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
</head>
<body>

    <% if notice %>
    
    <script type="text/javascript">
      noty({text: '<%= notice %>', type: 'alert'});
    </script>

    <% end %>
    
    <% if alert %>
    <script type="text/javascript">
      noty({text: '<%= alert %>', type: 'error'});
    </script>
    <% end %>
	 <% if student_signed_in? %>

      <h1>Welcome <%= current_student.first_name %> !!</h1> 
      <h3> Last signed at <%= current_student.last_sign_in_at.to_formatted_s(:short) %></h3>

      <%= link_to 'Logout', destroy_student_session_path, method: :delete %>

     <% end %>
	
      <%= yield %>

</body>
</html>
