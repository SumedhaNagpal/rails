<div id="blogfeed">
<% @blogs.each do |blog| %>
	<h5 id="blogfeed_studentname"> <%= blog.student.first_name %> 
	<%= blog.student.last_name %> </h5> 
	<hr> 
	<p id="blogfeed_title">
	<%=link_to blog.title, url_for(controller: 'blogs', action: 'show' , :id => blog.id) %> | <%= time_ago_in_words(blog.created_at) %> ago </p> 
	<p id="blogfeed_content"> <%=h truncate(blog.content, :length => 150) %> </p>

	<br> <br> <br>  

<%end%>

</div> 